// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
  SUPERADMIN
  EMPLOYEE
}

enum Permissions {
  CREATEUSER
  UPDATEUSER
}

model Auth {
  id String @id @default(uuid())
  username String
  password String
  email String
  role Role
  permissions Permissions[]
}
